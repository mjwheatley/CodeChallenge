{
  "name": "ioni2-meteor-codechallenge",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "start": "npm-run-all build:* --parallel watch:* meteor",
    "start:prod": "npm-run-all build:* --parallel watch:* meteor:prod",
    "meteor": "meteor run --settings ../config/development/settings.json",
    "meteor:prod": "meteor run --production --settings ../config/development/settings.json",
    "clear": "meteor reset",
    "meteor:update": "meteor update --all-packages",
    "build:ios-css": "node-sass --include-path node_modules/ionic-angular/themes --include-path node_modules/ionicons/dist/scss ../theme/app.ios.scss | postcss --local-plugins --use autoprefixer --output public/stylesheets/ios-bundle.css",
    "build:md-css": "node-sass --include-path node_modules/ionic-angular/themes --include-path node_modules/ionicons/dist/scss ../theme/app.md.scss | postcss --local-plugins --use autoprefixer --output public/stylesheets/md-bundle.css",
    "build:fonts": "copyfiles -f 'node_modules/ionic-angular/fonts/*.+(ttf||woff||woff2)' public/fonts/",
    "watch:css": "nodemon -w ../theme -e scss -x npm run build:ios-css build:md-css",
    "build": "npm-run-all build:* --parallel meteor:build",
    "meteor:build": "meteor build --directory ../build/ --architecture os.linux.x86_64"
  },
  "devDependencies": {
    "@types/chai": "3.4.33",
    "@types/meteor": "^1.3.31",
    "@types/mocha": "2.2.34",
    "@types/underscore": "^1.7.36",
    "autoprefixer": "6.3.5",
    "chai": "3.5.0",
    "chai-spies": "0.7.1",
    "copyfiles": "0.2.1",
    "meteor-typings": "1.3.1",
    "meteor-node-stubs": "0.2.4",
    "nodemon": "1.9.1",
    "node-sass": "3.4.2",
    "npm-run-all": "1.7.0",
    "postcss-cli": "2.5.1",
    "typescript": "2.0.9"
  },
  "dependencies": {
    "@angular/common": "2.2.1",
    "@angular/compiler": "2.2.1",
    "@angular/compiler-cli": "2.2.1",
    "@angular/core": "2.2.1",
    "@angular/forms": "2.2.1",
    "@angular/http": "2.2.1",
    "@angular/platform-browser": "2.2.1",
    "@angular/platform-browser-dynamic": "2.2.1",
    "@angular/platform-server": "2.2.1",
    "@angular/router": "3.3.0",
    "@ionic/storage": "1.1.6",
    "angular2-meteor": "0.7.1",
    "angular2-meteor-polyfills": "0.1.1",
    "angular2-meteor-tests-polyfills": "0.0.2",
    "babel-runtime": "^6.20.0",
    "bcrypt": "^1.0.1",
    "ionic-angular": "2.0.0-rc.4",
    "ionic-native": "2.2.11",
    "ionicons": "3.0.0",
    "meteor-rxjs": "0.4.5",
    "ng2-translate": "^4.2.0",
    "reflect-metadata": "0.1.8",
    "rxjs": "5.0.0-rc.4",
    "zone.js": "0.7.2"
  }
}
